<Window x:Class="WPF_InsertarDatos.Datos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_InsertarDatos"
        mc:Ignorable="d"
        Title="Datos" Height="400" Width="700">

    <Grid Margin="10" Loaded="Window_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <DataGrid Name="gridDatos" Grid.Row="0" FontSize="20" />
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Height="40" Width="100" FontSize="20" IsCancel="True" Click="cerrarVentana">Añadir</Button>
            <Button Height="40" Width="100" FontSize="20" IsCancel="True" Click="cerrarVentana" Margin="20 0 0 0">Modificar</Button>
            <Button Height="40" Width="100" FontSize="20" IsCancel="True" Click="cerrarVentana" Margin="20 0 0 0">Borrar</Button>
            <Button Height="40" Width="100" FontSize="20" IsCancel="True" Click="cerrarVentana" Margin="20 0 0 0">Cerrar</Button>
        </StackPanel>
    </Grid>
</Window>
