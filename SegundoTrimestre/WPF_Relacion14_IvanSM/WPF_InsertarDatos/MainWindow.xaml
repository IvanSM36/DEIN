<Window x:Class="WPF_InsertarDatos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_InsertarDatos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="20 0 0 20" >Conexion a la base de datos:</TextBlock>
                <TextBlock Name="txtBlockEstadoBD" Margin="5 0 0 0" Text="Offline" />
            </StackPanel>
            
            <Button Height="50" Width="200" FontSize="25" Click="Button_Click" Content="Conectar" />
            <Button Height="50" Width="200" FontSize="25" Click="btnConsulta_Click"  Content="Ver datos"  Margin="20"/>
            <Button Height="50" Width="200" FontSize="25" Click="btnInsertarDatos"  Content="Insertar datos" />

        </StackPanel>
    </Grid>
</Window>
